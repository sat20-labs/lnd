    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug LND",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/lnd",
            "args": [],
            "buildFlags": "-tags=autopilotrpc,chainrpc,dev,invoicesrpc,neutrinorpc,peersrpc,signrpc,walletrpc,watchtowerrpc",
            "env": {
              "GO111MODULE": "on"
            },
            "showLog": true
          },
          {
            "name": "Debug LNCLI",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/lncli",
            "args": ["create"],
            "buildFlags": "-tags=autopilotrpc,chainrpc,dev,invoicesrpc,neutrinorpc,peersrpc,signrpc,walletrpc,watchtowerrpc",
            "env": {
              "GO111MODULE": "on"
            },
            "showLog": true
          },
          {
            "name": "Attach to LND",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port": 2345,
            "host": "127.0.0.1"
          }
    ]
}